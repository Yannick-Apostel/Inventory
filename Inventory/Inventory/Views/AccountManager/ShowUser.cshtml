@model List<AccountManager>
@{
	ViewData["Title"] = "all users";
}
<h6> All User</h6>
<hr />
<table id="UserTable" class="table table-bordered table-striped table-hover">
	<thead class="table-dark">
		<tr>
			<th>Name</th>
			<th>Sirname</th>
			<th>Username</th>
			<th>Created User</th>
			<th>actions</th>
		</tr>
	</thead>
	<tbody>
		@{
			foreach(AccountManager account in Model)
			{
				<tr>
					<td>@account.Name</td>
					<td>@account.Sirname</td>
					<td>@account.Username</td>
					<td>@account.CreatingUser</td>
					<td>
						<a asp-route-account="@account" asp-controller="AccountManager" asp-action="SaveAccount" class="btn btn-warning">Bearbeiten</a>
						
						<button onclick="onClickDelteButton(@account.Id)" class="btn btn-danger">Löschen</button>
					</td>
				</tr>
			}
		}
	</tbody>
</table>

