@model List<Item>
@{
  
    ViewData["Title"] = "Itemview";
}
<a class="btn - btn-info" asp-controller="Item" asp-action="CreateEditItem">Add new Item</a>


<table id="itemTable" class="table ">
    <thead>
        <tr>
			<th></th>
			<th></th>
			<th></th>
        </tr>
        
    </thead>
    <tbody>
        @{

            int counter = 0;

            int i= 0;
            for(int j=0; j<Model.Count(); j++)
            {
                do
                {
                    if(i>= Model.Count())
                    {
                        break;
                    }
                    counter++;
                    <td>
                        <div class="card" style="width: 18rem;">
                            <div class="card-body">
                                <h6 class="card-title text-info">ID: @Model[i].Id </h6>
                                <h5 class="card-title">@Model[i].Name </h5>
                                <p class="card-text">Count: @Model[i].count</p>
                                <a class="btn btn-warning" asp-route-id="@Model[i].Id" asp-controller="Item" asp-action="CreateEditItem">Edit</a>
                                <button onclick="onClickDeleteButton(@Model[i].Id)" class="btn btn-danger">Delete</button>

                            </div>
                        </div>
                    </td>
                    i++;
                } while (counter < 3);
                counter = 0;
                <tr></tr>
            }        
        }	
    </tbody>

       
             
    
</table>

@section Scripts{
    <script>
        let table = new DataTable('#itemTable');


        function onClickDeleteButton(id){
            Swal.fire({
                title: 'are you sure to delete the item?',
                icon: 'error',
                showCloseButton: true,
                showCancelButton: true,
                focusConfirm: false,
                confirmButtonText:
                    'Yes, I do'
            }).then((result) => {  
                if (result.isConfirmed) {
                    //Backend call to delete job posting by id

                    $.ajax({
                        type:"POST",
                        url:"@Url.Action("DeleteItemById")",
                        data:{id: id},
                        success: function(msg){
                            Swal.fire('Item was successfully deleted!', '', 'success').then((result) => {
                               location.reload()
                            });
                        },
                        error: function(msg){
                            Swal.fire('something went wrong!', '', 'error')
                        }
                    });

                    
                }
            })
        }
        
    </script>
}